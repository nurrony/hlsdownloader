{
  "name": "hlsdownloader",
  "version": "0.0.0-semantic-release",
  "description": "Downloads HLS Playlist file and TS chunks",
  "snyk": true,
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "prepare": "lefthook install",
    "test": "node --import tsx --test",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run test:coverage && npm run build",
    "lint": "eslint . && echo 'ðŸ’„ Coding style guideline has been followed properly.'",
    "lint:fix": "eslint . --fix && echo 'ðŸ”§ Coding style has been fixed as per guideline.'",
    "build": "npm run lint:fix && npm run lint && rimraf -fr ./dist && npm run build:bundle",
    "test:coverage": "rimraf -fr ./coverage && echo 'ðŸ§¹ All test coverage reports has been cleaned.' && c8 npm test",
    "test:pure": "node --import tsx --test --experimental-test-coverage --test-coverage-exclude='tests/**'  tests/*.test.ts",
    "build:bundle": "esbuild src/index.ts --bundle --packages=external --platform=node --format=esm --target=node20 --minify --tree-shaking=true --outfile=dist/index.js"
  },
  "dependencies": {
    "ky": "^1.14.3",
    "p-limit": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "@types/web": "^0.0.331",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "HLS",
    "live",
    "m3u8",
    "chunk",
    "download",
    "playlist",
    "streaming",
    "livestream",
    "downloader",
    "cdn-priming",
    "hlsdownloader",
    "m3u8downloader",
    "streaming-video",
    "download-playlists"
  ],
  "homepage": "https://nurrony.github.io/hlsdownloader",
  "repository": {
    "type": "git+https",
    "url": "git+https://github.com/nurrony/hlsdownloader.git"
  },
  "author": {
    "email": "pro.nmrony@gmail.com",
    "name": "Nur Rony",
    "url": "https://nurrony.github.io"
  },
  "bugs": {
    "url": "https://github.com/nurrony/hlsdownloader/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
