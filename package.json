{
  "name": "hlsdownloader",
  "version": "0.0.0-semantic-release",
  "description": "Downloads HLS Playlist file and TS chunks",
  "snyk": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "test": "node --import tsx --test",
    "hooks:install": "lefthook install",
    "version": "echo $npm_package_version",
    "semantic-release": "semantic-release",
    "hooks:uninstall": "lefthook uninstall",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . && echo 'ðŸ’„ Coding style guideline has been followed properly.'",
    "lint:fix": "eslint . --fix && echo 'ðŸ”§ Coding style has been fixed as per guideline.'",
    "prepublishOnly": "echo 'ðŸš€ Release: Final automated validation gate before NPM publishing.' && npm run build",
    "build:types": "echo 'ðŸ·ï¸ Generating Types' && dts-bundle-generator -o dist/index.d.ts src/index.ts --no-check --silent",
    "docs": "rimraf -fr ./docs && echo 'ðŸ§¹ All documentation has been cleaned.' && echo 'ðŸ“ Generating documentation...' && jsdoc -c jsdoc.json",
    "build:bundle": "esbuild src/index.ts --bundle --packages=external --platform=node --format=esm --target=node20 --minify --tree-shaking=true --outfile=dist/index.js",
    "build": "echo 'ðŸ—ï¸ Compile: Bundles ESM source and generates minified distribution files.' && npm run typecheck && rimraf -fr ./dist && npm run build:types && npm run build:bundle",
    "test:coverage": "rimraf -fr ./coverage && echo 'ðŸ§¹ All test coverage reports has been cleaned.' && c8 npm test && echo 'ðŸ“Š Coverage: Validates 100% code coverage across all source files successfully.'"
  },
  "dependencies": {
    "ky": "^1.14.3",
    "p-limit": "^7.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "@types/web": "^0.0.331",
    "c8": "^10.1.3",
    "clean-jsdoc-theme": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^62.5.4",
    "jsdoc": "^4.0.5",
    "jsdoc-babel": "^0.5.0",
    "lefthook": "^2.1.0",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "HLS",
    "live",
    "m3u8",
    "chunk",
    "download",
    "playlist",
    "streaming",
    "livestream",
    "downloader",
    "cdn-priming",
    "hlsdownloader",
    "m3u8downloader",
    "streaming-video",
    "download-playlists"
  ],
  "license": "MIT",
  "homepage": "https://nurrony.github.io/hlsdownloader",
  "repository": {
    "type": "git+https",
    "url": "git+https://github.com/nurrony/hlsdownloader.git"
  },
  "author": {
    "email": "pro.nmrony@gmail.com",
    "name": "Nur Rony",
    "url": "https://nurrony.github.io"
  },
  "bugs": {
    "url": "https://github.com/nurrony/hlsdownloader/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "debug": true
  }
}
